{
  "api": {
    "base_url": "http://localhost:11434/v1",
    "api_key": "ollama",
    "model": "qwen2.5-coder:14b",
    "timeout": 300
  },
  "conversation": {
    "max_context_messages": 75,
    "context_window": 64000,
    "preserve_system_message": true,
    "auto_save": true,
    "save_directory": "~/.gerdsenai/conversations"
  },
  "file_operations": {
    "auto_backup": true,
    "backup_directory": ".backups",
    "diff_preview": true
  },
  "terminal": {
    "auto_confirm": false,
    "command_timeout": 90
  },
  "ui": {
    "theme": "github-dark",
    "show_timestamps": true,
    "thinking_enabled": true,
    "animation_enabled": true
  },
  "intelligence": {
    "enabled": true,
    "learning_rate": 0.12,
    "track_patterns": true
  },
  "mcp": {
    "enabled": true,
    "servers": [
      {
        "name": "github",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
        }
      }
    ],
    "auto_connect": true
  }
}
